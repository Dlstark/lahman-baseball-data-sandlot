SELECT  p.namegiven, am.awardid, am.lgid, am.playerid,am.yearid
FROM awardsmanagers AS am
LEFT JOIN managers AS m
ON am.playerid = m.playerid
LEFT JOIN people AS p
ON am.playerid = p.playerid
WHERE awardid = 'TSN Manager of the Year'
AND am.lgid IN ('ML', 'NL')
GROUP BY p.namegiven,am.awardid, am.lgid, am.playerid, am.yearid

ORDER BY p.namegiven






